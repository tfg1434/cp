int nCrMod(int n, int r, int p) {
    if (r > n - r)
        r = n - r;
 
    int C[r + 1];
    memset(C, 0, sizeof(C));
    C[0] = 1; // Top row of Pascal Triangle
 
    for (int i = 1; i <= n; i++) {
        for (int j = min(i, r); j > 0; j--)
            // nCj = (n-1)Cj + (n-1)C(j-1);
            C[j] = (C[j] + C[j - 1]) % p;
    }
    return C[r];
}
